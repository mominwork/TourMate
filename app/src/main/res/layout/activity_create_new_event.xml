<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    tools:context="com.a4bit.we.tourmate.CreateNewEventActivity"
    android:orientation="vertical"
    android:background="#7caaff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1fffe"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Place Name : "
                android:id="@+id/textView"
                android:layout_weight="1.3" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/placeNameCNEventET"
                android:layout_weight="3"
                android:background="#000000"
                android:padding="7dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/googlePlaceBTN"
                android:layout_weight="1"
                android:text="Open Map"
                android:onClick="openGoogleMap"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1fffe"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Budget :"
                android:id="@+id/textView2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/budgetAmountCNEventET"
                android:layout_weight="3"
                android:background="#000000"
                android:padding="7dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1fffe"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="From :"
                android:id="@+id/textView3"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/fromDateCNEventET"
                android:layout_weight="3"
                android:background="#000000"
                android:padding="7dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1fffe"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="To :"
                android:id="@+id/textView4"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/toDateCNEventET"
                android:layout_weight="3"
                android:background="#000000"
                android:padding="7dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ddfffc"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/saveEventInformationBTN" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

